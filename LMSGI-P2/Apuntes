 <!-- Creacion de una tabla, el <th> lo que hace es que lo pone en negrita.-->
        <table border="1px" style="border-collapse: collapse;color: blue; border-color: red;">
            <caption> Cuadrado </caption>
            <tr><th>C1</th><th>C2</th><th>C3</th></tr>
            <tr><td>1</td><td>2</td><td>3</td></tr>
            <tr><td>1</td><td>2</td><td>3</td></tr>
            <tr><td>1</td><td>2</td><td>3</td></tr>
        </table> 

<!-- atributo para columnas colspan, que sirve para agrupar casillas -->
 <table border="1px" style="border-collapse: collapse;color: blue; border-color: red;">
            <caption> Cuadrado </caption>
            <tr><th colspan="3">C1</th><th>C2</th><th>C3</th></tr>
        </table> 
<!-- ahora el atributo rowspan sirve para hacer mas ancha asia abajo la casilla  -->
 <table border="1px" style="border-collapse: collapse;color: blue; border-color: red;">
            <caption> Cuadrado </caption>
            <tr><th rowspan="3">C1</th><th>C2</th><th>C3</th></tr>
        </table> 